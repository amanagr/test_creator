{{!
    @template core_question/difficulty_condition

    An auto-complete select box containing a list of available difficultys to
    filter the quesiton bank questions by.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Context variables required for this template:
    * difficultyoptions A list of available difficultys

    Example context (json):
    {
        "difficultyoptions": [
            {
                "id": 1,
                "name": "foo",
                "selected": true
            },
            {
                "id": 2,
                "name": "bar",
                "selected": false
            }
        ]
    }
}}
 <div data-region="difficulty-condition-container-{{uniqid}}">
    <div class=form-group>
        <select multiple name="qdifficultyids[]" size="3" data-region="difficulty-select">
            {{#difficultyoptions}}
                <option {{#selected}}selected{{/selected}}value="{{id}}">{{name}}</option>
            {{/difficultyoptions}}
       </select>
       {{< core/overlay_loading }}
            {{$hiddenclass}}{{/hiddenclass}}
         {{/ core/overlay_loading }}
    </div>
</div> 
{{#js}}
require(
[
    'jquery',
    'core/form-autocomplete'
],
function(
    $,
    AutoComplete
) {
    var root = $('[data-region="difficulty-condition-container-{{uniqid}}"]');
    var selectElement = root.find('[data-region="difficulty-select"]');
    var loadingContainer = root.find('[data-region="overlay-icon-container"]');
    var placeholderText = {{#quote}}{{#str}} filterbydifficulty, block_test_creator {{/str}}{{/quote}};
    var noSelectionText = {{#quote}}{{#str}} nodifficultyfiltersapplied, block_test_creator {{/str}}{{/quote}};


    AutoComplete.enhance(
        selectElement, // Element to enhance.
        false, // Don't allow support for creating new difficultys.
        false, // Don't allow AMD module to handle loading new difficultys.
        placeholderText, // Placeholder text.
        false, // Make search case insensitive.
        true, // Show suggestions for difficultys.
        noSelectionText
    ).always(function() {
        // Hide the loading icon once the autocomplete has initialised.
        loadingContainer.addClass('hidden');
    });

    // We need to trigger a form submission because of how the question bank
    // page handles reloading the questions when an option changes.
    selectElement.on('change', function() {
        selectElement.closest('form').submit();
    });
});
{{/js}}
